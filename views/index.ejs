<html>
<head>
  <title>Address Book</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/all.css">
</head>
<body>
  <div class="container">
    <div class="sidebar">
      <ul class="nav">
      <% contacts.forEach(function(thisContact) { %>
        <li class="<%= (thisContact.id === contact.id ? 'active' : '') %>"><a href="/contact/<%= thisContact.id %>"><%= thisContact.name %></a></li>
      <% }) %>
      </ul>
    </div>
    <div class="main">
      <h1>The Awesome Address Book App</h1>
      <% if(contact) { %>
        <div class="card">
          <div class="header">
            <%= contact.name %>
          </div>
          <div class="content">
            <img src="<%= contact.image_url %>" alt="Contact Image" />
          </div>
          <a class="view-more" href="#">View more</a>
        </div>
      <% } else { %>
        Select a contact from the nav.
      <% } %>
    </div>
  </div>
</body>
</html>
